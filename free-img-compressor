<script>
    let originalFile = null;
    let compressedBlob = null;

    // Theme Management
    function toggleTheme() {
        const body = document.body;
        const themeIcon = document.getElementById('theme-icon');
        const currentTheme = body.getAttribute('data-theme');

        if (currentTheme === 'dark') {
            body.removeAttribute('data-theme');
            themeIcon.textContent = 'üåô';
            localStorage.setItem('theme', 'light');
        } else {
            body.setAttribute('data-theme', 'dark');
            themeIcon.textContent = '‚òÄÔ∏è';
            localStorage.setItem('theme', 'dark');
        }
    }

    // Social Share Functions
    function shareOnWhatsApp() {
        const shareText = encodeURIComponent("üì£ Check out this awesome free Image Compressor tool: ");
        const shareURL = encodeURIComponent(window.location.href);
        window.open(`https://wa.me/?text=${shareText}${shareURL}`, '_blank');
    }

    function shareOnTelegram() {
        const shareText = encodeURIComponent("üì¢ Check out this awesome free Image Compressor tool:");
        const shareURL = encodeURIComponent(window.location.href);
        window.open(`https://t.me/share/url?url=${shareURL}&text=${shareText}`, '_blank');
    }

    function shareOnTwitter() {
        const shareText = encodeURIComponent("Free Image Compressor Tool - Compress JPG, PNG & WebP instantly!");
        const shareURL = encodeURIComponent(window.location.href);
        window.open(`https://twitter.com/intent/tweet?url=${shareURL}&text=${shareText}`, '_blank');
    }

    function shareOnFacebook() {
        const shareURL = encodeURIComponent(window.location.href);
        window.open(`https://www.facebook.com/sharer/sharer.php?u=${shareURL}`, '_blank');
    }
